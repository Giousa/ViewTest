<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_content_header"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3300ffff">

        <TextView
            android:id="@+id/tv_content_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新东方烹饪医院步态评估报告"
            android:textSize="35sp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:layout_toRightOf="@id/tv_content_header_title"
            android:src="@drawable/icon_report"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_scale"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="1600px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#3300ff00"
        android:orientation="vertical"
        android:paddingBottom="10px"
        android:paddingLeft="50px"
        android:paddingTop="10px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_content_header_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="姓名:高衙内"
                android:textSize="@dimen/content_header_text"/>


            <TextView
                android:id="@+id/tv_content_header_sex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="性别:男"
                android:textSize="@dimen/content_header_text"/>

            <TextView
                android:id="@+id/tv_content_header_age"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="年龄:24"
                android:textSize="@dimen/content_header_text"/>

            <TextView
                android:id="@+id/tv_content_header_height"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="身高:130cm"
                android:textSize="@dimen/content_header_text"/>

            <TextView
                android:id="@+id/tv_content_header_weight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="体重:250kg"
                android:textSize="@dimen/content_header_text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_content_header_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="病历号:97004305"
                android:textSize="@dimen/content_header_text"/>


            <TextView
                android:id="@+id/tv_content_header_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="测试时间:2017-01-17 09:08"
                android:textSize="@dimen/content_header_text"/>

            <TextView
                android:id="@+id/tv_content_header_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="测试时长:50秒"
                android:textSize="@dimen/content_header_text"/>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="1600px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:background="#33ff00ff"
            android:orientation="horizontal"
            android:paddingLeft="50px"
            android:paddingTop="10px">

            <TextView
                android:layout_width="230px"
                android:layout_height="wrap_content"
                android:text="评审意见:"
                android:textSize="@dimen/content_header_text"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_content_header_suggestion"
                android:layout_width="1000px"
                android:layout_height="wrap_content"
                android:text="现象：行走时内翻较为明显，划圈步态明显，同时伴有XXXX问题。主要原因：XXXX肌肉肌张力过高，XXXX关节活动度不足、XXXXXXX。训练重点：针对此部分问题考虑 XXXX、XXXX及XXXX等训练，循序渐进。"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/iv_content_header_suggestion"
                android:layout_width="450px"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_report"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#33ff00ff"
            android:orientation="horizontal"
            android:paddingLeft="50px"
            android:paddingTop="10px">

            <TextView
                android:layout_width="230px"
                android:layout_height="wrap_content"
                android:text="备注:"
                android:textSize="@dimen/content_header_text"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_content_header_remark"
                android:layout_width="1000px"
                android:layout_height="wrap_content"
                android:text="拄拐、足托、搀扶"
                android:textSize="15sp"/>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>