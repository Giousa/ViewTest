<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/content_right_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="支撑相(%)"
            android:textSize="@dimen/content_header_text"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/content_right_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35"
                android:textSize="@dimen/content_header_text"/>

            <ImageView
                android:id="@+id/content_right_left_arrow"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@drawable/icon_arrow"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/content_right_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="37"
                android:textSize="@dimen/content_header_text"/>

            <ImageView
                android:id="@+id/content_right_arrow"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@drawable/icon_arrow"/>

        </LinearLayout>

        <TextView
            android:id="@+id/content_right_refer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="62-67"
            android:textSize="@dimen/content_header_text"/>
    </LinearLayout>

</LinearLayout>